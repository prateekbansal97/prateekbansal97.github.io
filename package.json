{
  "name": "prateekbansal-website",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "engines": { "node": ">=18.18" },           
  "packageManager": "npm@11.6.2",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format": "prettier --write .",
    "lint": "biome check --write . || true",
    "update:github": "node scripts/update-github.mjs",
    "update:scholar": "node scripts/update-scholar.mjs",
    "prebuild": "sh -c 'if [ -n \"$GITHUB_TOKEN\" ]; then node scripts/update-github.mjs; fi; if [ -n \"$SERPAPI_KEY\" ]; then node scripts/update-scholar.mjs; fi'"
  },
  "dependencies": {
    "astro": "latest",
    "@astrojs/tailwind": "latest",
    "@astrojs/sitemap": "latest",
    "tailwindcss": "latest",
    "@tailwindcss/typography": "latest",
    "autoprefixer": "latest",
    "postcss": "latest",
    "reading-time": "latest",
    "zod": "latest",
    "marked": "latest",
    "gray-matter": "latest",
    "cheerio": "latest",
    "cross-fetch": "latest",
    "dotenv": "latest"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "latest"
  }
}
