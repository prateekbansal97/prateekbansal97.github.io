---
import '@/styles/global.css';
const { title = 'Prateek Bansal', description = 'Researcher â€¢ Engineer', url = 'https://prateekbansal97.github.io' } = Astro.props;
const og = { image: `${url}/og.png`, title, description };
---
<!DOCTYPE html>
<html lang="en" class="scroll-pt-24" data-theme="system">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={og.title} />
    <meta property="og:description" content={og.description} />
    <meta property="og:image" content={og.image} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <script is:inline>
      const saved = localStorage.getItem('theme');
      if (saved === 'dark' || (saved === null && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <link rel="stylesheet" href="/fonts/inter.css" />
  </head>
  <body>
    <a href="#main" class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 bg-white text-ink p-2 rounded">Skip to content</a>
    <header class="border-b border-black/5 sticky top-0 z-50 backdrop-blur bg-[color:var(--bg)]/70">
      <div class="container flex h-16 items-center justify-between">
        <a href="/" class="font-semibold">Prateek Bansal</a>
        <nav class="flex items-center gap-4 text-sm">
          <!-- NEW: Featured anchor -->
          <a href="/#projects" class="hover:underline">Projects</a>
          <a href="/#featured" class="hover:underline">Featured</a>
          <a href="/#publications" class="hover:underline">Publications</a>
          <a href="/#highlights" class="hover:underline">Highlights</a>
          <a href="/#contact" class="hover:underline">Contact</a>
          <button id="theme" class="rounded px-2 py-1 border border-black/10 hover:bg-black/5" aria-label="Toggle theme">â˜€ï¸/ğŸŒ™</button>
        </nav>
      </div>
    </header>
    <main id="main" class="container py-10">
      <slot />
    </main>
    <footer class="border-t border-black/5">
      <div class="container py-8 text-sm text-[color:var(--muted)]">
        Â© {new Date().getFullYear()} Prateek Bansal Â· <a class="underline" href="/rss.xml">RSS</a> Â· <a class="underline" href="https://github.com/prateekbansal97">GitHub</a> Â· <a class="underline" href="https://scholar.google.com/citations?user=B0OVVlEAAAAJ">Google Scholar</a> Â· <a class="underline" href="https://www.linkedin.com/in/prateek-bansal97/">LinkedIn</a>
      </div>
    </footer>
    <script is:inline>
      document.getElementById('theme')?.addEventListener('click', () => {
        const root = document.documentElement;
        const isDark = root.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    </script>
  </body>
</html>
